spring:
  application:
    name: user-service

  datasource:
    url: jdbc:h2:mem:testdb
    driver-class-name: org.h2.Driver
    username: sa
    password:

  jpa:
    hibernate:
      ddl-auto: create-drop
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.H2Dialect

  h2:
    console:
      enabled: true
      path: /h2-console

server:
  port: 8080

logging:
  level:
    com.example.userservice: DEBUG
    org.springframework.web: DEBUG

    springdoc:
      api-docs:
        path: /api-docs
        enabled: true
      swagger-ui:
        path: /swagger-ui.html
        enabled: true
        operations-sorter: method
        tags-sorter: alpha
        doc-expansion: none
        display-request-duration: true
        filter: true
        try-it-out-enabled: true
        default-model-rendering: example
      show-actuator: true
      default-consumes-media-type: application/json
      default-produces-media-type: application/hal+json
      paths-to-match:
        - /api/v1/**
      packages-to-scan:
        - com.example.controller
        - com.example.dto

    spring:
      jackson:
        serialization:
          indent-output: true
        deserialization:
          fail-on-unknown-properties: false
      mvc:
        pathmatch:
          matching-strategy: ant_path_matcher
      hateoas:
        use-hal-as-default-json-media-type: true

    server:
      servlet:
        context-path: /

    # Логирование для Swagger
    logging:
      level:
        org.springframework.hateoas: DEBUG
        org.springdoc: INFO